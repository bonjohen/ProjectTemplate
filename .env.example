# Flask configuration
FLASK_APP=run.py
FLASK_ENV=development
FLASK_DEBUG=1

# Security
SECRET_KEY=your-secret-key-goes-here-make-it-very-secure

# Database
DATABASE_URL=sqlite:///app.db

# Email configuration (for password reset and verification)
# For development, you can use a service like Mailtrap.io or a local SMTP server
# For production, configure with your actual SMTP server

# Mailtrap example (for development)
MAIL_SERVER=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USE_TLS=1
MAIL_USERNAME=your-mailtrap-username
MAIL_PASSWORD=your-mailtrap-password
MAIL_DEFAULT_SENDER=noreply@example.com

# Gmail example (for testing)
# MAIL_SERVER=smtp.gmail.com
# MAIL_PORT=587
# MAIL_USE_TLS=1
# MAIL_USERNAME=your-gmail-address@gmail.com
# MAIL_PASSWORD=your-app-password
# MAIL_DEFAULT_SENDER=your-gmail-address@gmail.com

# File upload settings
MAX_CONTENT_LENGTH=16777216  # 16MB in bytes
